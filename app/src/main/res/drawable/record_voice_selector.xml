<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorGrayBackground"/>
            <padding
                android:top="12dp"
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                />
            <size
                android:width="90dp"
                android:height="90dp"/>
        </shape>
    </item>
    <item>
            <selector>
                <item android:state_pressed="false">
                    <shape android:shape="oval">
                        <solid android:color="@color/colorMain" />
                        <padding
                            android:bottom="21dp"
                            android:left="21dp"
                            android:right="21dp"
                            android:top="21dp" />
                    </shape>
                </item>

                <item android:state_pressed="true">
                    <shape android:shape="oval">
                        <solid android:color="@color/colorTextLightGray" />
                        <padding
                            android:bottom="21dp"
                            android:left="21dp"
                            android:right="21dp"
                            android:top="21dp" />
                    </shape>
                </item>
            </selector>
    </item>
</layer-list>